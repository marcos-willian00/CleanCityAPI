{
  "info": {
    "name": "Clean City API",
    "description": "Collection of API endpoints for Clean City crowdsensing app",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"fullName\": \"John Doe\", \"email\": \"john@example.com\", \"password\": \"password123\"}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/signup",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "signup"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"email\": \"john@example.com\", \"password\": \"password123\"}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "profile"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"fullName\": \"Jane Doe\"}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "profile"]
            }
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"oldPassword\": \"password123\", \"newPassword\": \"newpassword456\"}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/change-password",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "change-password"]
            }
          }
        }
      ]
    },
    {
      "name": "Occurrences",
      "item": [
        {
          "name": "Create Occurrence",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"title\": \"Garbage Found\", \"description\": \"Large amount of garbage\", \"latitude\": -23.5505, \"longitude\": -46.6333, \"address\": \"Avenida Paulista\", \"temperature\": 25.5, \"humidity\": 65}"
            },
            "url": {
              "raw": "{{base_url}}/api/occurrences",
              "host": ["{{base_url}}"],
              "path": ["api", "occurrences"]
            }
          }
        },
        {
          "name": "Get All Occurrences",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/occurrences?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "occurrences"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get My Occurrences",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/occurrences/my-occurrences?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "occurrences", "my-occurrences"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Occurrence by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/occurrences/{{occurrence_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "occurrences", "{{occurrence_id}}"]
            }
          }
        },
        {
          "name": "Get Statistics",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/occurrences/stats",
              "host": ["{{base_url}}"],
              "path": ["api", "occurrences", "stats"]
            }
          }
        },
        {
          "name": "Search by Bounds",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/occurrences/bounds?minLat=-24&maxLat=-23&minLon=-47&maxLon=-46",
              "host": ["{{base_url}}"],
              "path": ["api", "occurrences", "bounds"],
              "query": [
                {
                  "key": "minLat",
                  "value": "-24"
                },
                {
                  "key": "maxLat",
                  "value": "-23"
                },
                {
                  "key": "minLon",
                  "value": "-47"
                },
                {
                  "key": "maxLon",
                  "value": "-46"
                }
              ]
            }
          }
        },
        {
          "name": "Update Occurrence",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"title\": \"Updated Title\", \"description\": \"Updated description\"}"
            },
            "url": {
              "raw": "{{base_url}}/api/occurrences/{{occurrence_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "occurrences", "{{occurrence_id}}"]
            }
          }
        },
        {
          "name": "Delete Occurrence",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/occurrences/{{occurrence_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "occurrences", "{{occurrence_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Photos",
      "item": [
        {
          "name": "Upload Photo",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "photo",
                  "type": "file",
                  "src": "path/to/photo.jpg"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/photos/{{occurrence_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "photos", "{{occurrence_id}}"]
            }
          }
        },
        {
          "name": "Get Occurrence Photos",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/photos/{{occurrence_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "photos", "{{occurrence_id}}"]
            }
          }
        },
        {
          "name": "Download Photo",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/photos/download/{{photo_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "photos", "download", "{{photo_id}}"]
            }
          }
        },
        {
          "name": "Delete Photo",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/photos/{{photo_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "photos", "{{photo_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Shares",
      "item": [
        {
          "name": "Share Occurrence",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"occurrenceId\": \"{{occurrence_id}}\", \"userEmail\": \"other@example.com\", \"permission\": \"VIEW\"}"
            },
            "url": {
              "raw": "{{base_url}}/api/shares",
              "host": ["{{base_url}}"],
              "path": ["api", "shares"]
            }
          }
        },
        {
          "name": "Get Shared With Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/shares/shared-with-me",
              "host": ["{{base_url}}"],
              "path": ["api", "shares", "shared-with-me"]
            }
          }
        },
        {
          "name": "Get Shared By Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/shares/shared-by-me",
              "host": ["{{base_url}}"],
              "path": ["api", "shares", "shared-by-me"]
            }
          }
        },
        {
          "name": "Revoke Share",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/shares/{{share_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "shares", "{{share_id}}"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "occurrence_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "photo_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "share_id",
      "value": "",
      "type": "string"
    }
  ]
}
